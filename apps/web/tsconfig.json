{
    "extends": "@repo/typescript-config/nextjs.json",
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "next-env.d.ts",
        "next.config.js",
        ".next/types/**/*.ts",
        "postcss.config.mjs",
        "eslint.config.ts",
    ],
    "exclude": [
        "node_modules",
        ".next"
    ]
}